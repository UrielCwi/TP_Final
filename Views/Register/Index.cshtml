<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- <title>@ViewData["Title"] - GREV - Apellido</title> -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
<body>
    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100">
              <h2 class="mb-4d">Registro</h2>
              <!-- @if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
} -->

              <form Action='@Url.Action("Registro","Register")' method="post">
                <div class="Usuario">
                    <h2>Nombre</h2>
                    <input type="text" class="inputlogin" name="Nombre" maxlength="30" data-maxlength="30" required oninput="checkLength(this)"></input>
                </div>
                <div class="Usuario">
                    <h2>Apellido</h2>
                    <input type="text" class="inputlogin" name="Apellido" maxlength="20" data-maxlength="20" required oninput="checkLength(this)"></input>
                </div>
                <div class="Usuario">
                    <h2>Email</h2>
                    <input type="email" class="inputlogin" name="Email" maxlength="40" data-maxlength="40" required oninput="checkLength(this)" placeholder=""></input>
                </div>
                <div class="Usuario">
                    <h2>Contraseña</h2>
                    <input type="password" class="inputlogin" name="Contraseña" required></input>
                </div>
                <div class="Usuario">
                    <h2>Empresa</h2>
                    <input type="text" class="inputlogin" name="Empresa" maxlength="20" data-maxlength="20" required oninput="checkLength(this)"></input>
                </div>
                    <button class="inicio" type="submit" style="margin-top: 10px">Registrarse</button>
            </form>
            <form Action='@Url.Action("Index","Login")'>
                <button class="inicio" type="submit" style="margin-top: 30px">Iniciar Sesion</button>
            </form>
            </div>
                <div class="bloque2">
                    <img class="imagen" src="/Imagenes/GREV.png"></img>
                    <h2 style="font-size: 60px;">GREV</h2>
                </div>
            </div>
        </div>
    </div>
</body>