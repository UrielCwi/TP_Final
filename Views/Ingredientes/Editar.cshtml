@model Ingrediente

@{
    ViewData["Title"] = "Editar Ingrediente";
}

<h2>@ViewData["Title"]</h2>

<form Action='@Url.Action("Editar","Ingredientes")' method="post">
    <input type="hidden" name="idUsuario" value="@ViewBag.Usuario.id" />
    <div class="form-group">
        <label asp-for="descripcion" class="control-label" text="Descripcion"></label>
        <input type="text" class="form-control" name="descripcion" id="descripcionIngrediente" text="@Model.descripcion" maxlength="40" required />        
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="cantidad" class="control-label" text="cantidad"></label>
        <input type="number" class="form-control" name="cantidad" id="cantidad" text="@Model.cantidad" step="any" min="0" required />
        <span asp-validation-for="cantidad" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="valorUnidad" class="control-label" text="valorUnidad"></label>
        <input type="number" class="form-control" name="valorUnidad" id="valorUnidad" text="@Model.valorUnidad" step="any" min="0" required />
        <span asp-validation-for="valorUnidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="unidad">Unidad</label>
        <select class="form-select" name="idUnidad" aria-label="Default select example">
            <option selected>Elegi una unidad</option>
            @foreach (Unidad a in ViewBag.Unidad)
            {
                <option value="@a.id">@a.unidad</option>
            }   
        </select>
    </div>
    <div class="form-group">
        <label asp-for="activo" class="control-label" text="activo"></label>
        @Html.CheckBoxFor(x=>x.activo)
        <span asp-validation-for="activo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>
