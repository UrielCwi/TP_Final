@{
    ViewData["Title"] = "Eliminar Ingrediente";
}

<h3>¿Estás seguro de que quieres eliminar este ingrediente?</h3>
<div>
    <h4>Ingrediente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Model.descipcion
        </dd>
        <dt class="col-sm-2">
            id
        </dt>
        <dd class="col-sm-10">
            @Model.id
        </dd>
    </dl>
    
    <form Action='@Url.Action("Eliminar","Ingredientes")' method="post">
        <input type="hidden" name="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index"class="btn btn-secondary">Cancelar</a>
    </form>
</div>