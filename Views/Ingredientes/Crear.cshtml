@model Ingrediente
@{
    ViewData["Title"] = "Agregar Ingrediente";
}

<h2>@ViewData["Title"]</h2>

<form Action='@Url.Action("Crear","Ingredientes")' method="post">
    <div class="form-group">
        <label asp-for="descripcion" class="control-label"></label>
        <input type="text" name="descripcion" class="form-control" id="descripcion"  required />
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="cantidad" class="control-label"></label>
        <input name="cantidad" class="form-control" type="number" id="cantidad"  required />
        <span asp-validation-for="cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="valorUnidad" class="control-label"></label>
        <input name="valorUnidad" class="form-control" type="number" id="valorUnidad" required />
        <span asp-validation-for="valorUnidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="activo" class="control-label"></label>
        <input name="activo" class="form-control" type="number" id="activo" required />
        <span asp-validation-for="activo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
    </div>
</form>