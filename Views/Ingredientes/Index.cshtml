@model List<Ingrediente>


<style>
    body {
        padding-top: 80px;
    }

    h2 {
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 20px;
        margin-top: 40px;
        background-color: white;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 12px 15px;
        text-align: left;
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #f2f2f2;
    }

    .table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .btn {
        padding: 10px 20px;
        margin-right: 10px;
        border: none;
        text-decoration: none;
        font-size: 14px;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .container {
        margin-top: 20px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Estilos adicionales para el botón de agregar */
    .add-ingredient-btn {
        position: absolute;
        top: 20%; /* Ajusta según la disposición de tu pantalla */
    }

</style>

<h2>@ViewData["Title"]</h2>

<div class="container">
    <h2>Lista de Ingredientes</h2>
</div>

<h2>@ViewBag.ErrorEliminar</h2>

<p>
    <a href='@Url.Action("Crear", "Ingredientes", new { IdUsuario = ViewBag.Usuario.id })' class="btn btn-primary add-ingredient-btn">Agregar Nuevo Ingrediente</a>@*mejorar estilo*@
</p>

<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Cantidad</th>
            <th>Unidad</th>
            <th>Valor por Unidad</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
       string unidadNombre = "Unidad no encontrada";
       foreach(var uni in ViewBag.Unidad)
        {
            if (uni.id == item.idUnidad)
                {
                    unidadNombre = uni.unidad;
                    break;
                } 
        }
        if (item.cantidad <= 20)
        {
            <text>
                <script type="text/javascript">
                    alert("¡Atención! La cantidad del ingrediente '@item.descripcion' es baja: @item.cantidad unidades restantes.");
                </script>
            </text>
        }
        <tr>
            <td>@item.descripcion</td>
            <td>@item.cantidad</td>
            <td>@unidadNombre</td>
            <td>@item.valorUnidad</td>
            <td>@item.activo</td>
            <td>
                <a href='@Url.Action("Editar", "ingredientes", new { IdUsuario = ViewBag.Usuario.id, id = @item.id })' class="btn btn-secondary">Editar</a>
                <form action='@Url.Action("Eliminar", "Ingredientes")' method="post" style="display:inline;">@*cuando tocas eliminar, elimina pero tirar error y debes volver para atras para ver que si elimino*@
                    <input type="hidden" name="id" value="@item.id" />
                    <input type="hidden" name="idUsuario" value="@ViewBag.Usuario.id" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este ingrediente?');">Eliminar</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
