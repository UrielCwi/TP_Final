                <div class="Usuario">
                    <h2>Email</h2>
                    <input type="text" class="inputlogin" name="Usuario" required placeholder="Email"></input>
                </div>
                <div class="Usuario">
                    <h2>Contraseña</h2>
                    <input type="password" class="inputlogin" name="Contraseña" required placeholder="Contraseña"></input>
                </div>
                    <a href='@Url.Action("MandarContraseña","Home")'><h3>¿Olvidaste la contraseña?</h3></a>
