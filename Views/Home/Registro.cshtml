@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Topodiario - Apellido</title>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
<body style="background-color: #130758;">
    <div class= "row">
        <div class= "col-ig-6">
            <div class="bloques">
            <div class="bloque1">
            <form Action='@Url.Action("Registro","Home")'>
                <div class="Titulo">
                    Registro
                </div>
                <div class="Usuario">
                    <h2>Usuario</h2>
                    <input type="text" class="inputlogin" name="Nombre" required></input>
                </div>
                <div class="Usuario">
                    <h2>Fecha de nacimiento</h2>
                    <input type="date" class="inputlogin" name="FechaNacimiento" required></input>
                </div>
                <div class="Usuario">
                    <h2>Contraseña</h2>
                    <input type="password" class="inputlogin" name="Contraseña" required></input>
                </div>
                <div class="Usuario">
                    <h2>Codigo de seguridad. Solo 1 numero</h2>
                    <input type="text" class="inputlogin" name="Codigo" required></input>
                </div>
                    <button class="inicio" type="submit">Registrarse</button>
            </form>
            </div>
                <div class="bloque2">
                    <img class="imagen" src="/Imagenes/image.webp"></img>
                    <h2 style="font-size: 60px;">Topodiario</h2>
                </div>
            </div>
        </div>
    </div>
</body>