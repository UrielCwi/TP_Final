@model Plato

@{
    ViewData["Title"] = "Crear Plato";
}

<h2>@ViewData["Title"]</h2>

<form Action='@Url.Action("Crear","Platos")' method="post">
    <input type="hidden" name="idUsuario" value="@ViewBag.Usuario.id" />
    <div class="form-group">
        <label asp-for="nombre" class="control-label"></label>
        <input type="text" name="nombre" class="form-control" id="nombrePlato" maxlength="35" data-maxlength="35" required oninput="checkLength(this)" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="categoria">Categor√≠a</label>
        <select class="form-select" name="idCategoria" aria-label="Default select example">
            <option selected>Elegi una categoria</option>
            @foreach (Categorias a in ViewBag.Categorias)
            {
                <option value="@a.id">@a.nombre</option>
            }   
        </select>
    </div>
    <div class="form-group">
        <label asp-for="precio" class="control-label"></label>
        <input name="precio" class="form-control" type="text" id="precio" step="any" min="0" required />
        <span asp-validation-for="precio" class="text-danger"></span>
    </div>
    @*SOLUCIONAR ELEGIR INGREDIENTE*@
    <div class="form-group">
    <label for="ingrediente">Ingredientes</label>
    <div class="form-check">
        @foreach (Ingrediente a in ViewBag.Ingrediente)
        {
            <div class="form-check">
                <input 
                    class="form-check-input" 
                    type="checkbox" 
                    name="ingredientes" 
                    value="@a.id" 
                    id="ingrediente_@a.id" />
                <label 
                    class="form-check-label" 
                    for="ingrediente_@a.id">
                    @a.descripcion
                </label>
            </div>
        }
    </div>
</div>
    <div class="form-group">
        <label asp-for="activo" class="control-label"></label>
        @Html.CheckBoxFor(x=>x.activo)
        <span asp-validation-for="activo" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>