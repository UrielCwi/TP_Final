@model Plato

<style>
    body {
        padding-top: 80px; /* Ajusta según la altura de tu navbar */
    }

    h2 {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

    .form-check {
        margin-top: 10px;
    }

    .form-check-label {
        margin-left: 5px;
    }

    .form-check-input {
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        color: white;
        cursor: pointer;
        border-radius: 5px;
    }

    .btn-primary:hover {
        opacity: 0.9;
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
    }

    .container {
        margin-top: 20px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    input[type="submit"] {
        width: 100%;
        font-size: 16px;
    }

</style>

<h2>@ViewData["Title"]</h2>

<div class="container">
    <form action='@Url.Action("Crear", "Platos", new { IdUsuario = ViewBag.Usuario.id})' method="post">
        <input type="hidden" name="idUsuario" value="@ViewBag.Usuario.id" />

        <div class="form-group">
            <label asp-for="nombre" class="control-label">Nombre del Plato</label>
            <input type="text" name="nombre" class="form-control" id="nombrePlato" maxlength="35" data-maxlength="35" required oninput="checkLength(this)" />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="categoria">Categoría</label>
            <select class="form-select" name="idCategoria" aria-label="Seleccione una categoría">
                <option selected>Elegi una categoria</option>
                @foreach (Categorias a in ViewBag.Categorias)
                {
                    <option value="@a.id">@a.nombre</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="precio" class="control-label">Precio</label>
           @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control"} })
            <span asp-validation-for="precio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ingrediente">Ingredientes</label>
            <div class="form-check">
                @foreach (Ingrediente a in ViewBag.Ingrediente)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="ingredientes" value="@a.id" id="ingrediente_@a.id" />
                        <label class="form-check-label" for="ingrediente_@a.id">
                            @a.descripcion
                        </label>
                                      @*  <input type="number" name="cantidades[@a.id]" min="1" class="form-control" placeholder="Cantidad" />*@

                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <label asp-for="activo" class="control-label">Activo</label>
            @Html.CheckBoxFor(x => x.activo)
            <span asp-validation-for="activo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>
