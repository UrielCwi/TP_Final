@model TP_FINAL.Models.Plato
@{
    ViewData["Title"] = "Eliminar Plato";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro de que quieres eliminar este plato?</h3>
<div>
    <h4>Plato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>
        <dt class="col-sm-2">
            Categoría
        </dt>
        <dd class="col-sm-10">
            @Model.IdCategoria
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
