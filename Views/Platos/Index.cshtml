@model IEnumerable<TP_FINAL.Models.Plato>
@{
    ViewData["Title"] = "Gestión de Platos";
}

<h2>Gestión de Platos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Plato</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.nombre</td>
            <td>@item.idCategoria</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-secondary">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
