@model Plato

@{
    ViewData["Title"] = "Editar Plato";
}

<h2>@ViewData["Title"]</h2>

<form Action='@Url.Action("Editar","Platos")' method="post">
    <input type="hidden" name="id" value="@Model.id" />
    <div class="form-group">
        <label asp-for="nombre" class="control-label" text="Nombre"></label>
        <input type="text" class="form-control" name="nombre" id="nombrePlato" text="@Model.nombre" required />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>
    <select class="form-select" name="id" aria-label="Default select example">
            <option selected>Elegi una categoria</option>
            @foreach (Categorias a in ViewBag.Categorias)
            {
              <option value="@a.id">@a.nombre</option>
            }
          </select> 
    @*USAR UN SELECT PARA HACER DESPLEGABLE LO DE ID CATEGORIA
    <select class="form-select" name="IdCategoria" aria-label="Default select example">
            <option selected>Elegi una categoria</option>
            @foreach (Categorias a in ViewBag.Categorias)
            {
              <option value="@a.IdCategoria">@a.nombre</option>
            }
          </select> USAR UN SELECT PARA HACER DESPLEGABLE LO DEID CATEGORIA*@

    <div class="form-group">
        <label asp-for="precio" class="control-label" text="Precio"></label>
        <input type="number" class="form-control" name="precio" id="precio" text="@Model.precio" required />
        <span asp-validation-for="precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>
