@{
ViewData["Title"] = "Index";
Layout = "";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="" content="" />
        <title>@ViewData["Title"] - GREV</title>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    </head>
<body>
        <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
            <div class="row w-100">
                <div class="col-md-6 d-flex flex-column align-items-start">
                    <h1 class="text-start">GREV</h1>
                    <h2 class="mb-4d">Login now</h2>
                    <p class="text-start">Hola, bienvenido de nuevo 👋</p>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                        </div>
                    }
                        <form action='@Url.Action("Login","Login")' class="w-100">
                            <div class="form-group mb-3">
                                <p class="text-start">Email</p>
                                <input type="email" class="form-control" name="Usuario" required placeholder="Email" maxlength="40" data-maxlength="40" oninput="checkLength(this)">
                            </div>
                            <div class="form-group mb-3">
                                <p class="text-start">Contraseña</p>
                                <input type="password" class="form-control" name="Contraseña" required placeholder="Contraseña" maxlength="30" data-maxlength="30" oninput="checkLength(this)">
                            </div>
                            <button class="btn btn-primary w-100 mb-3" type="submit">Logearse</button>
                        </form>
                    <a href='@Url.Action("MandarRegistro","Register")' class="w-100 d-block text-start">¿Estás interesado en unirte? <span class="text-danger">¡Clickea aquí!</span></a>
                </div>
                <div class="col-md-6 d-flex align-items-center justify-content-center">
                <img class="img-fluid" src="~/Imagenes/GREV.png" alt="GREV Logo">
            </div>
        </div>
    </div>
    </body>
</html>